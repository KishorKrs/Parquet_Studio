{
  "name": "parquet-studio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "Kishor Sharma",
  "license": "MIT",
  "description": "Cross-platform Parquet file editor",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "dev:electron": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.parquetstudio.app",
    "productName": "Parquet Studio",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${productName} Portable.exe"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "apache-arrow": "^21.1.0",
    "file-saver": "^2.0.5",
    "hyparquet": "^1.24.0",
    "parquet-wasm": "^0.7.1",
    "react": "^19.2.0",
    "react-data-grid": "^7.0.0-beta.59",
    "react-dom": "^19.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}